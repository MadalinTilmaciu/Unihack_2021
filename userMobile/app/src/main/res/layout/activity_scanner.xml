<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#6A000000">

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="360dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/refs"
        android:clipToOutline="true" />

    <TextView
        android:id="@+id/expiry_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surface_view"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="Please select expiry date"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/white" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_below="@+id/expiry_date"
        android:layout_centerInParent="true"
        android:calendarViewShown="false"
        android:datePickerMode="spinner" />

    <TextView
        android:id="@+id/selected_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/datePicker"
        android:layout_marginLeft="100dp"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <LinearLayout
        android:id="@+id/manual_bar"
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="360dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/selected_Date">

        <Button
            android:id="@+id/manualBtn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_below="@+id/datePicker"
            android:text="Manual add" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_bar"
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="360dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/manual_bar">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:layout_marginRight="50dp"
            android:layout_below="@+id/datePicker"
            android:text="Cancel" />

        <Button
            android:id="@+id/okBtn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:layout_below="@+id/datePicker"
            android:text="Ok" />

    </LinearLayout>

    <TextView
        android:id="@+id/barcode_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttons_bar"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="Scan something..."
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/white" />

</RelativeLayout>